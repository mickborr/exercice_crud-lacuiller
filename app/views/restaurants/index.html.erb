<h1>Les restaurants</h1>

<%= link_to 'Add a new restaurant', new_restaurant_path %>

<% @restaurants.each do |restaurant| %>
  <h2><%= restaurant.name %></h2>
  <p><%= restaurant.address %></p>
  <p><%= '*' * restaurant.stars %></p>
  <%= link_to 'Aller voir', restaurant_path(restaurant) %>
  <%= link_to 'Edit', edit_restaurant_path(restaurant) %>
  <%= link_to 'Delete', restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>
